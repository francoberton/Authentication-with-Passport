<div class="container">
	<form class="form-authentication">
		<h2 class="form-authentication-heading text-center"><%= title %></h2>
		<label for="inputUsername" class="sr-only">Username</label>
		<input id="inputUsername" class="form-control" placeholder="Username" required="" autofocus="" type="username" ng-model='user.username'>
		<label for="inputPassword" class="sr-only">Password</label>
		<input id="inputPassword" class="form-control" placeholder="Password" required="" type="password" ng-model='user.pwd'>
		<button class="btn btn-lg btn-primary btn-block"  ng-click='signin(user)'>Signin</button>
 	</form>
</div>


    
     
       
       
      
        
     

   
